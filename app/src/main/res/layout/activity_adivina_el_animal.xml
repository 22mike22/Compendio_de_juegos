<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdivinaElAnimal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que animal es?"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="24dp" />

        <TextView
            android:id="@+id/txtIntentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="326dp"
            tools:layout_editor_absoluteY="68dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgAnimal"
        android:layout_width="283dp"
        android:layout_height="244dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="116dp" />

    <Button
        android:id="@+id/btnAdivinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="483dp" />

    <EditText
        android:id="@+id/etxtAnimal"
        android:layout_width="352dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/txtEspera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>