<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtIntentos2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdivinaElAnimal">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Que animal es?"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txtIntentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAnimal"
        android:layout_width="283dp"
        android:layout_height="244dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnAdivinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="24dp"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtAnimal" />

    <EditText
        android:id="@+id/etxtAnimal"
        android:layout_width="352dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre del animal"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/imgAnimal"
        app:layout_constraintStart_toStartOf="@+id/imgAnimal"
        app:layout_constraintTop_toBottomOf="@+id/imgAnimal" />

    <TextView
        android:id="@+id/txtIntentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="5"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imgAnimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAnimal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEspera"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdivinar"
        app:layout_constraintEnd_toEndOf="@+id/etxtAnimal"
        app:layout_constraintStart_toStartOf="@+id/etxtAnimal"
        app:layout_constraintTop_toBottomOf="@+id/etxtAnimal" />

</androidx.constraintlayout.widget.ConstraintLayout>